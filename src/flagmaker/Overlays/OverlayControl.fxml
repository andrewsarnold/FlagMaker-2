<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml/1">
	<FlowPane orientation="HORIZONTAL">
		<Button fx:id="btnOverlay" onAction="#OverlaySelect" prefWidth="32.0" prefHeight="32.0">
			<tooltip>
				<Tooltip text="Change type" />
			</tooltip>
		</Button>
		<Button onAction="#SetVisibility">
			<tooltip>
				<Tooltip text="Toggle visibility" />
			</tooltip>
			<graphic>
				<ImageView fx:id="btnVisibility" fitHeight="32.0" fitWidth="32.0">
					<image>
						<Image url="flagmaker/Images/check_on.png" />
					</image>
				</ImageView>
			</graphic>
		</Button>
		<Button onAction="#Remove">
			<tooltip>
				<Tooltip text="Remove" />
			</tooltip>
			<graphic>
				<ImageView fitHeight="32.0" fitWidth="32.0">
					<image>
						<Image url="flagmaker/Images/remove.png" />
					</image>
				</ImageView>
			</graphic>
		</Button>
		<Button onAction="#MoveUp">
			<tooltip>
				<Tooltip text="Move up" />
			</tooltip>
			<graphic>
				<ImageView fitHeight="32.0" fitWidth="32.0">
					<image>
						<Image url="flagmaker/Images/moveup.png" />
					</image>
				</ImageView>
			</graphic>
		</Button>
		<Button onAction="#MoveDown">
			<tooltip>
				<Tooltip text="Move down" />
			</tooltip>
			<graphic>
				<ImageView fitHeight="32.0" fitWidth="32.0">
					<image>
						<Image url="flagmaker/Images/movedown.png" />
					</image>
				</ImageView>
			</graphic>
		</Button>
		<Button onAction="#Clone">
			<tooltip>
				<Tooltip text="Clone" />
			</tooltip>
			<graphic>
				<ImageView fitHeight="32.0" fitWidth="32.0">
					<image>
						<Image url="flagmaker/Images/clone.png" />
					</image>
				</ImageView>
			</graphic>
		</Button>
	</FlowPane>
	
	<ColorPicker fx:id="overlayPicker" minHeight="28.0" style="-fx-color-label-visible: false;" />
	<VBox fx:id="pnlSliders" />
	<HBox fx:id="strokeBox" alignment="CENTER_LEFT">
		<Label text="Stroke">
			<padding>
				<Insets right="10.0" />
			</padding>
		</Label>
		<ColorPicker fx:id="strokePicker" minHeight="28.0" style="-fx-color-label-visible: false;" />
	</HBox>
</fx:root>
